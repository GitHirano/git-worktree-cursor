{
  "name": "git-worktree",
  "displayName": "Git Worktree + Cursor Launcher",
  "description": "Easily manage Git worktrees and open them in Cursor editor with a beautiful sidebar interface",
  "version": "1.0.0",
  "publisher": "RikuOgawa",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/git-worktree"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "worktree",
    "cursor",
    "branch",
    "workspace"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-worktree.addWorktree",
        "title": "Git Worktree: Add and Open in Cursor",
        "icon": "$(add)"
      },
      {
        "command": "git-worktree.deleteWorktree",
        "title": "Git Worktree: Delete",
        "icon": "$(trash)"
      },
      {
        "command": "git-worktree.refreshWorktrees",
        "title": "Refresh Worktrees",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "git-worktree",
          "title": "Git Worktree",
          "icon": "./icon.svg"
        }
      ]
    },
    "views": {
      "git-worktree": [
        {
          "id": "gitWorktreeExplorer",
          "name": "Worktrees",
          "icon": "./icon.svg",
          "contextualTitle": "Git Worktree Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "git-worktree.addWorktree",
          "when": "view == gitWorktreeExplorer",
          "group": "navigation@1"
        },
        {
          "command": "git-worktree.refreshWorktrees",
          "when": "view == gitWorktreeExplorer",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "git-worktree.deleteWorktree",
          "when": "view == gitWorktreeExplorer && viewItem == worktree",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}
